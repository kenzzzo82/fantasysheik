<p id="notice"><%= notice %></p>

<h1>Listing Fighters</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Kos</th>
      <th>Submissions</th>
      <th>Decisions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fighters.each do |fighter| %>
      <tr>
        <td><%= fighter.name %></td>
        <td><%= fighter.weight %></td>
        <td><%= fighter.height %></td>
        <td><%= fighter.wins %></td>
        <td><%= fighter.losses %></td>
        <td><%= fighter.kos %></td>
        <td><%= fighter.submissions %></td>
        <td><%= fighter.decisions %></td>
        <td><%= link_to 'Show', fighter, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_fighter_path(fighter), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', fighter, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fighter', new_fighter_path, class: "btn btn-link" %>
