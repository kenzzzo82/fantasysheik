<%= form_for(@fight) do |f| %>
  <% if @fight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fight.errors.count, "error") %> prohibited this fight from being saved:</h2>

      <ul>
      <% @fight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :fighter1 %>
    <%= f.autocomplete_field :fighter1, autocomplete_fighter_name_fights_path, :update_elements => {:id => "#fight_fighter1_id" } , class: "form-control" %>
    <%= f.hidden_field :fighter1_id %>
  </div>
  <div class="form-group">
    <%= f.label :fighter2 %>
    <%= f.autocomplete_field :fighter2, autocomplete_fighter_name_fights_path, :update_elements => {:id => "#fight_fighter2_id" }, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :favorite %>
    <%= f.autocomplete_field :favorite, autocomplete_fighter_name_fights_path, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :points %>
    <%= f.number_field :points, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :event%>
    <%= f.collection_select  :event_id, Event.order('name ASC').all, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
