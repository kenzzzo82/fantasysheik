<p id="notice"><%= notice %></p>

<h1>Listing Fights</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Fighter1</th>
      <th>Fighter2</th>
      <th>Favorite</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fights.each do |fight| %>
      <tr>
        <td><%= fight.fighter1 %></td>
        <td><%= fight.fighter2 %></td>
        <td><%= fight.favorite %></td>
        <td><%= fight.points %></td>
        <td><%= link_to 'Show', fight, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_fight_path(fight), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', fight, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

